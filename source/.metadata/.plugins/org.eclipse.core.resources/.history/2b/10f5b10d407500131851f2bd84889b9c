#include "servo.h"

p_servo servos = 0;
int  cntservos = 0;

void init_servos (p_servo pservos, int cnt ) {
	servos = pservos;
	cntservos = cnt;

	int i;
	for (i= 0; i < cntservos; i++) {
		p_servo servo = &servos[i];
		*(servo->DDR) |= servo->pinmask;
	}
}

// Timer läuft für 8 Bit Auflösung mit ca. 255kHz
// Vorteiler 1, OC1B 63

void init_servotimer (void) {
	TCCR1B |= (1<<WGM12);
}


ISR() {

}
